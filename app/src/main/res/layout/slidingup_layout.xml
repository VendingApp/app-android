<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment android:name="de.submit_ev.vendingapp.fragments.FragmentVendorDetail"
            android:id="@+id/vedorDetailFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_vendor_detail" />

        <fragment android:name="de.submit_ev.vendingapp.fragments.FragmentVendorProducts"
            android:id="@+id/vedorProductsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_vendor_products" />
    </LinearLayout>

</ScrollView>
